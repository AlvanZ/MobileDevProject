<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Design Hashmap -->

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="16dp"
        android:text="Coding Practice"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="#FF5100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/HashingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="56dp"
        android:text="Hashing"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDesignHashmap"
        android:layout_width="312dp"
        android:layout_height="79dp"
        android:layout_marginTop="40dp"
        android:paddingTop="20dp"
        android:paddingRight="200dp"
        android:paddingBottom="20dp"
        android:text="Design HashMap"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HashingText" />

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        app:layout_constraintStart_toEndOf="@id/textViewDesignHashmap"
        app:layout_constraintTop_toTopOf="@id/textViewDesignHashmap" />

    <!-- Design Hashset -->

    <TextView
        android:id="@+id/textViewDesignHashset"
        android:layout_width="312dp"
        android:layout_height="90dp"
        android:layout_marginTop="44dp"
        android:paddingTop="20dp"
        android:paddingRight="208dp"
        android:paddingBottom="20dp"
        android:text="Design HashSet"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDesignHashmap" />

    <Button
        android:id="@+id/buttonDesignHashset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        app:layout_constraintStart_toEndOf="@id/textViewDesignHashset"
        app:layout_constraintTop_toTopOf="@id/textViewDesignHashset" />


    <!-- Back Button -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="107dp"
        android:layout_height="52dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="356dp"
        android:text="Back"
        android:drawableLeft="@drawable/baseline_arrow_left_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonDesignHashset" />

</androidx.constraintlayout.widget.ConstraintLayout>
